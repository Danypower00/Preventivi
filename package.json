{
    "name": "preventivo-app",
    "version": "1.0.0",
    "description": "Applicazione desktop per la gestione dei preventivi",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "package-win": "electron-packager . PreventivoApp --platform=win32 --arch=x64 --out=build --icon=logo.ico --overwrite",
        "package-mac": "electron-packager . PreventivoApp --platform=darwin --arch=x64 --out=build --icon=logo.ico --overwrite",
        "package-linux": "electron-packager . PreventivoApp --platform=linux --arch=x64 --out=build --overwrite"
    },
    "dependencies": {
        "jspdf": "^2.5.1"
    },
    "devDependencies": {
        "electron": "^26.2.0",
        "electron-packager": "^17.1.2"
    }
}
